{
    "require": {
        "php": ">=5.3.2",
        "symfony/symfony": ">=2.0.10",
        "doctrine/orm": ">=2.1.0",
        "twig/extensions": "*",

        "symfony/assetic-bundle": "2.0.*",
        "sensio/generator-bundle": "2.0.*",
        "sensio/framework-extra-bundle": "2.0.*",
        "sensio/distribution-bundle": "2.0.*",
        "jms/security-extra-bundle": "1.0.*",        
        "alphalemon/alphalemon-cms-bundle": "dev-feat-decouple-themes-and-blocks"
    },

    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    },

    "scripts": {
        "post-install-cmd": [
            "AlphaLemon\\ElFinderBundle\\Composer\\ScriptHandler::installElFinderLibrary"
        ],
        "post-update-cmd": [
            "AlphaLemon\\ElFinderBundle\\Composer\\ScriptHandler::installElFinderLibrary"
        ]
    }
}
